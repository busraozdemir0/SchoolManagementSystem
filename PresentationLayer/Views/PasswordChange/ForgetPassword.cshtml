@model ForgetPasswordViewModel
@{
    Layout = null;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />
    <title>Şifre Değişiklik Talebi</title>

    <link rel="icon" type="image/x-icon" href="~/icons/lock.png" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<div class="container mt-5">
    <div class="card">
        <h4 class="card-header text-center p-2">Şifre Değişiklik Talebi</h4>
        <div class="card-body m-5">
            <form asp-area="" asp-controller="PasswordChange" asp-action="ForgetPassword" method="post" id="passwordBtn">
                <p class="card-text">Lütfen sistemde kayıtlı olan e-mail adresinizi aşağıdaki alana giriniz.</p>
                <input type="email" class="form-control" placeholder="E-Mail Adresiniz" asp-for="Mail" />
                <br />
                <button id="btn" type="submit" class="btn btn-primary">Şifre Yenileme Linki Gönder</button>
            </form>

            @* E-Mail kayitli degilse 5 sn boyunca gosterilecek olan alert *@
            <div id="alertContainer" class="alert alert-danger" style="display: none;" role="alert">
                Bu E-maile ait kullanıcı sistemde kayıtlı değil. Lütfen tekrar deneyin.
            </div>

        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#passwordBtn').on('submit', function (event) {
            event.preventDefault();

            $.ajax({
                url: '@Url.Action("ForgetPassword", "PasswordChange")',
                type: 'POST',
                data: $(this).serialize(),
                success: function (response) {
                    if (response.success) {
                        Swal.fire({
                            title: 'Başarılı!',
                            text: "Mail adresinize şifre yenileme linki gönderilmiştir. Lütfen mailinizi kontrol ediniz.",
                            icon: 'success',
                            showCancelButton: false,
                            confirmButtonColor: '#3085d6',
                            confirmButtonText: 'Tamam',
                        }).then((result) => {
                            if (result.isConfirmed) {
                                $('#passwordBtn')[0].submit();
                                window.location.href = '/Login/Index/'; // islem basarili olduktan sonra farkli sayfaya gitmemesi icin
                            }
                        });
                    } else {
                        $('#alertContainer').css('display', 'block');

                        // 5 saniye sonra alertContainer'i gizle
                        setTimeout(function () {
                            $('#alertContainer').css('display', 'none');
                        }, 5000);

                        return false; // Tarayiciya veri gondermeyi engelle
                    }
                },
                error: function () {
                    $('#alertContainer').css('display', 'block');

                    // 5 saniye sonra alertContainer'i gizle
                    setTimeout(function () {
                        $('#alertContainer').css('display', 'none');
                    }, 5000);

                    return false; // Tarayiciya veri gondermeyi engelle
                }
            });
        });
    });
</script>
