@model NewsLetterSendEmailDto

@{
    ViewData["Title"] = "Mail Gönderme";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Aboneler</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-area="Admin" asp-controller="NewsLetter" asp-action="Index">Aboneler</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Toplu Mail Gönderme</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">

                <div class="col-md-12">
                    <div class="card mb-4">
                        <form asp-controller="NewsLetter" asp-action="SendingBulkEmails" method="post" enctype="multipart/form-data">
                            <div class="mt-4" asp-validation-summary="ModelOnly"></div>
                            <div class="card-body">

                                <div class="form-group">
                                    <label asp-for="Subject" class="form-label">Konu</label>
                                    <input asp-for="Subject" type="text"
                                           class="form-control mb-3"
                                           id="defaultFormControlInput"
                                           placeholder="Lütfen konuyu giriniz."
                                           aria-describedby="defaultFormControlHelp" />
                                    <span asp-validation-for="Subject" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Message" class="form-label">Mesaj</label>
                                    <textarea asp-for="Message" id="textEdit" type="text"
                                              class="form-control mb-3"
                                              id="defaultFormControlInput"
                                              placeholder="Lütfen mesajınızı giriniz."
                                              aria-describedby="defaultFormControlHelp" style="min-height:300px"></textarea>
                                    <span asp-validation-for="Message" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary">Gönder</button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>