@model List<GradeListDto>

@{
    ViewData["Title"] = "Silinmiş Sınıflar";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Silinmiş Sınıflar</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Silinmiş Öğeler</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Sınıflar</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>
<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="card">
                    <div class="text-nowrap m-5">
                        <table class="table table-striped" id="gradesTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Sınıf Adı</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Sınıf Adı</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </tfoot>
                            <tbody class="table-border-bottom-0">
                                @foreach (var grade in Model)
                                {
                                    <tr name="@grade.Id">
                                        <td>@grade.Name</td>
                                        <td>@(grade.IsDeleted ? "Aktif Değil" : "Aktif")</td>
                                        <td class="text-center">
                                            <a class="btn btn-warning btn-sm" data-id="@grade.Id" asp-area="Admin" asp-controller="Grade" asp-action="UndoDelete" asp-route-gradeId="@grade.Id"><i class="fa fa-undo"></i></a>
                                            <a class="btn btn-danger btn-sm" data-id="@grade.Id" asp-area="Admin" asp-controller="Grade" asp-action="HardDelete" asp-route-gradeId="@grade.Id"><i class="fa fa-minus-circle"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/gradeIndex.js" type="application/ecmascript"></script>
}