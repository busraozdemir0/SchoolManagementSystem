@model List<UserListDto>

@{
    ViewData["Title"] = "Kullanıcılar";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewBag.GradeName'a Ait Öğrenciler</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-area="Admin" asp-controller="Grade" asp-action="Index">Sınıflar</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Öğrenci Listesi</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="card">
                    <div class="text-nowrap m-5">
                        <a class="btn btn-outline-secondary mb-3" asp-area="Admin" asp-controller="Grade" asp-action="Index">
                            <i class="fa fa-arrow-left"></i> Geri Dön
                        </a>

                        <a class="btn btn-outline-primary mb-3" asp-area="Admin" asp-controller="User" asp-action="AddStudent">
                            Öğrenci Ekle <i class="fa fa-plus"></i>
                        </a>

                        <table class="table table-striped" id="usersTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Adı</th>
                                    <th>Soyadı</th>
                                    <th>Cinsiyeti</th>
                                    <th>Sınıfı</th>
                                    <th>Öğrenci Numarası</th>
                                    <th>Telefon Numarası</th>
                                    <th>E-Mail</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Adı</th>
                                    <th>Soyadı</th>
                                    <th>Cinsiyeti</th>
                                    <th>Sınıfı</th>
                                    <th>Öğrenci Numarası</th>
                                    <th>Telefon Numarası</th>
                                    <th>E-Mail</th>
                                    <th>İşlemler</th>
                                </tr>
                            </tfoot>
                            <tbody class="table-border-bottom-0">
                                @foreach (var user in Model)
                                {
                                    if (user.Role == RoleConsts.Student && user.GradeId == ViewBag.GradeId)
                                    {
                                        <tr name="@user.Id">
                                            <td>@user.Name</td>
                                            <td>@user.Surname</td>
                                            <td>@user.Gender</td>
                                            <td>@user.Grade.Name</td>
                                            <td>@user.StudentNo</td>
                                            <td>@user.PhoneNumber</td>
                                            <td>@user.Email</td>
                                            <td class="text-center">
                                                <a class="btn btn-primary btn-sm" data-id="@user.Id" asp-area="Admin" asp-controller="User" asp-action="Update" asp-route-userId="@user.Id"><i class="fa fa-edit"></i></a>
                                                <a class="btn btn-danger btn-sm" data-id="@user.Id" asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-userId="@user.Id"><i class="fa fa-minus-circle"></i></a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                        <a class="btn btn-outline-success" data-id="@ViewBag.GradeId" asp-area="Admin" asp-controller="Grade" asp-action="StudentExcelReport" asp-route-gradeId="@ViewBag.GradeId"><i class="fa fa-file-excel-o" aria-hidden="true"></i> @ViewBag.GradeName Öğrenci Listesini İndir</a>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/userIndex.js" type="application/ecmascript"></script>
}
