@model ContactDto

@{
    ViewData["Title"] = "İletişim Detay";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>İletişim Sayfası</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-area="Admin" asp-controller="Home" asp-action="Dashboard">Dashboard</a>
            </li>
            <li class="breadcrumb-item">
                <a asp-area="Admin" asp-controller="Contact" asp-action="Index">İletişim</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>@Model.Subject</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">

                <div class="col-md-12">
                    <div class="card mb-4">
                            <div class="card-body">
                                <input type="hidden"  asp-for="Id"/>
                                <div class="form-group">
                                    <label asp-for="NameSurname" class="form-label">Adı Soyadı</label>
                                <input asp-for="NameSurname" type="text" disabled
                                           class="form-control mb-3"
                                           id="defaultFormControlInput"
                                           placeholder="Ad Soyad."
                                           aria-describedby="defaultFormControlHelp" />
                                </div>

                                <div class="form-group">
                                    <label asp-for="EMail" class="form-label">E - Mail</label>
                                    <input asp-for="EMail" type="text" disabled
                                           class="form-control mb-3"
                                           id="defaultFormControlInput"
                                           aria-describedby="defaultFormControlHelp" />
                                </div>

                                <div class="form-group">
                                    <label asp-for="Subject" class="form-label">Konu</label>
                                <input asp-for="Subject" type="text" disabled
                                           class="form-control mb-3"
                                           id="defaultFormControlInput"
                                           aria-describedby="defaultFormControlHelp" />
                                </div>

                                <div class="form-group">
                                    <label asp-for="Message" class="form-label">Mesaj İçeriği</label>
                                    <textarea asp-for="Message" type="text" disabled 
                                              class="form-control mb-3"
                                              id="defaultFormControlInput"
                                              placeholder="Mesaj içeriği..."
                                              aria-describedby="defaultFormControlHelp" style="min-height:300px"></textarea>
                                </div>

                                <div class="form-group">
                                    <a class="btn btn-outline-primary" href="mailto:@Model.EMail"><i class="fa fa-envelope"></i> Mail Gönder</a>
                                </div>
                            </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

