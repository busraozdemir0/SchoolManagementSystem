@model List<LessonListDto>

@{
    ViewData["Title"] = "Silinmiş Dersler";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Silinmiş Dersler</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Silinmiş Öğeler</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Dersler</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="card">
                    <div class="text-nowrap m-5">

                        <table class="table table-striped" id="lessonsTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Ders Kodu</th>
                                    <th>Ders Adı</th>
                                    <th>Haftalık Ders Saati</th>
                                    <th>Sınıf</th>
                                    <th>Öğretmen Bilgisi</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Ders Kodu</th>
                                    <th>Ders Adı</th>
                                    <th>Haftalık Ders Saati</th>
                                    <th>Sınıf</th>
                                    <th>Öğretmen Bilgisi</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </tfoot>
                            <tbody class="table-border-bottom-0">
                                @foreach (var lesson in Model)
                                {
                                    <tr name="@lesson.Id">
                                        <td>@lesson.LessonCode</td>
                                        <td>@lesson.LessonName</td>
                                        <td>@lesson.LessonCredit</td>
                                        <td>@lesson.Grade.Name</td>
                                        <td>Ad: @lesson.User.Name @lesson.User.Surname ~ Email: @lesson.User.Email</td>
                                        <td>@(lesson.IsDeleted ? "Aktif Değil" : "Aktif")</td>
                                        <td class="text-center">                                      
                                            <div class="row">
                                                <a class="btn btn-warning btn-sm" style="margin-right:0.5em;" data-id="@lesson.Id" asp-area="Admin" asp-controller="Lesson" asp-action="UndoDelete" asp-route-lessonId="@lesson.Id"><i class="fa fa-undo"></i></a>
                                                
                                                <form id="deleteForm" asp-area="Admin" asp-controller="Lesson" asp-action="HardDelete" asp-route-lessonId="@lesson.Id" method="post" onsubmit="event.preventDefault(); confirmDelete(event)">
                                                    <button class="btn btn-danger btn-sm" type="submit"><i class="fa fa-minus-circle"></i></button>
                                                </form>
                                            </div>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/lessonIndex.js" type="application/ecmascript"></script>

    <script>
        function confirmDelete(event) {
            Swal.fire({
                title: 'Silmek istediğinize emin misiniz?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet',
                cancelButtonText: 'İptal'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Silme islemini gerceklestir
                    document.getElementById("deleteForm").submit();
                } else {
                    // İptal edildiginde yapilacak islemler
                    console.log("Silme işlemi iptal edildi.");
                    return false;
                }
            });
        }
    </script>
}