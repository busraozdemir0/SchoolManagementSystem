@model AnnouncementAddDto

@{
    ViewData["Title"] = "Duyuru Ekleme";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Duyurular</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-area="Admin" asp-controller="Announcement" asp-action="Index">Duyurular</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Duyuru Ekleme</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">

                <div class="col-md-12">
                    <div class="card mb-4">
                        <form asp-controller="Announcement" asp-action="Add" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly"></div>
                            <div class="card-body">

                                <div class="form-group">
                                    <label asp-for="RoleId" class="form-label">Bu Duyuruyu Kime Yapacağınızı Seçin <span style="color:red;">*</span></label>
                                    <select id="receiverList" class="form-control mb-1" asp-for="RoleId" asp-items="@(new SelectList(Model.Roles,"Id","Name"))" style="height: max-content;"></select>
                                    <small class="text-muted">Tüm Kullanıcılara Duyuru Yapabilmek İçin Kullanıcı Seçeneğini Seçin</small>
                                    <span asp-validation-for="RoleId" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Title" class="form-label">Başlık</label>
                                    <input asp-for="Title" type="text"
                                           class="form-control mb-1"
                                           id="defaultFormControlInput"
                                           placeholder="Lütfen duyuru başlığını giriniz."
                                           aria-describedby="defaultFormControlHelp" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Content" class="form-label">İçerik</label>
                                    <textarea asp-for="Content" id="textEdit" type="text"
                                              class="form-control mb-1"
                                              id="defaultFormControlInput"
                                              placeholder="Duyuru içeriği..."
                                              aria-describedby="defaultFormControlHelp" style="min-height:300px"></textarea>
                                    <span asp-validation-for="Content" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block">Duyuru Yap</button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
