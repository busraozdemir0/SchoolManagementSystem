@model List<AnnouncementListDto>

@{
    ViewData["Title"] = "Duyurular";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Duyurular</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-area="Admin" asp-controller="Home" asp-action="Dashboard">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Duyurular</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="card">
                    <div class="text-nowrap m-5">

                        <a class="btn btn-outline-primary mb-3" asp-area="Admin" asp-controller="Announcement" asp-action="Add">
                            Duyuru Ekle <i class="fa fa-plus"></i>
                        </a>

                        <table class="table table-striped" id="announcementsTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Başlık</th>
                                    <th>İçerik</th>
                                    <th>Duyuruyu Yapan Kullanıcı</th>
                                    <th>Alıcılar</th>
                                    <th>Oluşturulma Tarihi</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Başlık</th>
                                    <th>İçerik</th>
                                    <th>Duyuruyu Yapan Kullanıcı</th>
                                    <th>Alıcılar</th>
                                    <th>Oluşturulma Tarihi</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </tfoot>
                            <tbody class="table-border-bottom-0">
                                @foreach (var announcement in Model)
                                {
                                    <tr name="@announcement.Id">
                                        <td>@announcement.Title</td>
                                        <td>@Regex.Replace(HttpUtility.HtmlDecode(announcement.Content), @"<[^>]*>|&nbsp;", "").Substring(0, 5)...</td>
                                        <td>@announcement.CreatedBy</td>
                                        <td>@announcement.Role.Name</td>
                                        <td>@announcement.CreatedDate.ToShortDateString()</td>
                                        <td>@(announcement.IsDeleted ? "Aktif Değil" : "Aktif")</td>
                                        <td class="text-center">
                                            <a class="btn btn-primary btn-sm" data-id="@announcement.Id" asp-area="Admin" asp-controller="Announcement" asp-action="Update" asp-route-announcementId="@announcement.Id"><i class="fa fa-edit"></i></a>
                                            <a class="btn btn-danger btn-sm" data-id="@announcement.Id" asp-area="Admin" asp-controller="Announcement" asp-action="SafeDelete" asp-route-announcementId="@announcement.Id"><i class="fa fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <a class="btn btn-outline-secondary mb-3 mt-2" asp-area="Admin" asp-controller="Announcement" asp-action="TeacherAnnouncements">
                            <i class="fa fa-hand-o-right"></i>  Öğretmenlerin Yaptığı Duyuruları Görmek İçin Tıklayın
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/announcementIndex.js" type="application/ecmascript"></script>
}