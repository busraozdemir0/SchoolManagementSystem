@model List<AnnouncementListDto>

@{
    ViewData["Title"] = "Silinmiş Duyurular";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Silinmiş Duyurular</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Silinmiş Öğeler</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Duyurular</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="card">
                    <div class="text-nowrap m-5">

                        <table class="table table-striped" id="announcementsTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Başlık</th>
                                    <th>İçerik</th>
                                    <th>Duyuruyu Yapan Kullanıcı</th>
                                    <th>Alıcılar</th>
                                    <th>Oluşturulma Tarihi</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Başlık</th>
                                    <th>İçerik</th>
                                    <th>Duyuruyu Yapan Kullanıcı</th>
                                    <th>Alıcılar</th>
                                    <th>Oluşturulma Tarihi</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </tfoot>
                            <tbody class="table-border-bottom-0">
                                @foreach (var announcement in Model)
                                {
                                    <tr name="@announcement.Id">
                                        <td>@announcement.Title</td>
                                        <td>@Regex.Replace(HttpUtility.HtmlDecode(announcement.Content), @"<[^>]*>|&nbsp;", "").Substring(0, 5)...</td>
                                        <td>@announcement.CreatedBy</td>
                                        <td>@announcement.Role.Name</td>
                                        <td>@announcement.CreatedDate.ToShortDateString()</td>
                                        <td>@(announcement.IsDeleted ? "Aktif Değil" : "Aktif")</td>
                                        <td class="text-center">
                                            <div class="row">
                                                <a class="btn btn-warning btn-sm" style="margin-right:0.5em;" data-id="@announcement.Id" asp-area="Admin" asp-controller="Announcement" asp-action="UndoDelete" asp-route-announcementId="@announcement.Id"><i class="fa fa-undo"></i></a>
                                                
                                                <form id="deleteForm" asp-area="Admin" asp-controller="Announcement" asp-action="HardDelete" asp-route-announcementId="@announcement.Id" method="post" onsubmit="event.preventDefault(); confirmDelete(event)">
                                                    <button class="btn btn-danger btn-sm" type="submit"><i class="fa fa-minus-circle"></i></button>
                                                </form>

                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/announcementIndex.js" type="application/ecmascript"></script>

    
