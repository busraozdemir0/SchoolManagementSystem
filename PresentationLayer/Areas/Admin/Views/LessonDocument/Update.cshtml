@model LessonDocumentUpdateDto

@{
    ViewData["Title"] = "Ders Dokümanı Güncelleme";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Dokümanlar</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-area="Admin" asp-controller="LessonDocument" asp-action="Index">Dokümanlar</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Ders Dokümanı Güncelleme</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">

                <div class="col-md-12">
                    <div class="card mb-4">
                        <form asp-controller="LessonDocument" asp-action="Update" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly"></div>
                            <div class="card-body">

                                <input type="hidden" asp-for="Id" />
                                <input type="hidden" asp-for="LessonId" value="@ViewBag.LessonId" />
                                <input type="hidden" asp-for="CreatedBy" value="@ViewBag.CreatedBy" />

                                <div class="form-group">
                                    <label class="form-label">Ders</label>
                                    <input type="text"
                                           class="form-control mb-1"
                                           id="defaultFormControlInput"
                                           value="@ViewBag.LessonName"
                                           readonly
                                           aria-describedby="defaultFormControlHelp" />
                                </div>

                                <div class="form-group">
                                    <label asp-for="Title" class="form-label">Ders Materyali Başlığı</label>
                                    <input asp-for="Title" type="text"
                                           class="form-control mb-1"
                                           id="defaultFormControlInput"
                                           placeholder="Lütfen ders materyalinin başlığını giriniz."
                                           aria-describedby="defaultFormControlHelp" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label asp-for="Material" class="form-label">Dosya seçiniz</label>
                                            <input asp-for="Material" type="file" accept="*"
                                                   class="form-control mb-1"
                                                   id="defaultFormControlInput"
                                                   aria-describedby="defaultFormControlHelp" />
                                            <small class="text-muted" style="font-size:11px;">Yüklenecek dosya'nın maksimum boyutu <b>128 MB</b> olmalıdır!</small><br />
                                            <span asp-validation-for="Material" class="text-danger"></span>
                                        </div>
                                        <div class="col-md-8">
                                            @if (Model.DocumentId is not null)
                                            {
                                                <label asp-for="Document.FileName" class="form-label mb-3">Mevcut Materyal</label>
                                                <br />
                                                <a href="~/documents/@Model.Document.FileName">@Model.Document.FileName</a>
                                            }
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary">Ders Dokümanını Kaydet</button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
