@model LessonVideoUpdateDto

@{
    ViewData["Title"] = "Ders Videosu Güncelleme";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Dokümanlar</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-area="Admin" asp-controller="LessonVideo" asp-action="Index">Videolar</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Ders Videosu Güncelleme</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">

                <div class="col-md-12">
                    <div class="card mb-4">
                        <form asp-controller="LessonVideo" asp-action="Update" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly"></div>
                            <div class="card-body">

                                <input type="hidden" asp-for="Id" />
                                <input type="hidden" asp-for="LessonId" value="@ViewBag.LessonId" />
                                <input type="hidden" asp-for="CreatedBy" value="@ViewBag.CreatedBy" />

                                <div class="form-group">
                                    <label class="form-label">Ders</label>
                                    <input type="text"
                                           class="form-control mb-1"
                                           id="defaultFormControlInput"
                                           value="@ViewBag.LessonName"
                                           readonly
                                           aria-describedby="defaultFormControlHelp" />
                                </div>

                                <div class="form-group">
                                    <label asp-for="Title" class="form-label">Ders Videosu Başlığı</label>
                                    <input asp-for="Title" type="text"
                                           class="form-control mb-1"
                                           id="defaultFormControlInput"
                                           placeholder="Lütfen ders videosunun başlığını giriniz."
                                           aria-describedby="defaultFormControlHelp" />
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-5">
                                            <div class="form-group">
                                                <label asp-for="YoutubeVideoPath" class="form-label">Youtube Ders Videosu Entegre Edin</label>
                                                <input asp-for="YoutubeVideoPath" type="text"
                                                       class="form-control mb-1"
                                                       id="defaultFormControlInput"
                                                       placeholder="Entegre etmek istediğiniz youtube videosunun yolunu giriniz."
                                                       aria-describedby="defaultFormControlHelp" />
                                                <small class="text-bold" style="font-size:11px;">
                                                    Eklemek istediğiniz Youtube videousunun "Paylaş" kısmından "Yerleştir" e tıklayın. <br />
                                                    Ardından çıkan HTML kodunun yalnızca src içerisini kopyalayın.<br />
                                                </small>

                                                <small class="text-muted" style="font-size:11px;">
                                                    <b>Örneğin:</b> <strike><</strike><strike>iframe width="560" height="315" src=</strike>"https://www.youtube.com/embed/
                                                    <br />fuZBrTHoygc?si=mNj2DL_VXsQXJwxW" title="YouTube video player" frameborder="0"<br />
                                                    allow="accelerometer; autoplay; clipboard-write; encrypted-media;<br />
                                                    gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin"<br />
                                                    <strike>allowfullscreen><</strike><strike>/iframe </strike>>
                                                </small>
                                                <span asp-validation-for="YoutubeVideoPath" class="text-danger"></span>
                                            </div>

                                        </div>

                                        <div class="col-md-1" style="margin-left:1em; margin-top:1.5em;">
                                            <p style="margin-bottom:1em;">Ya da</p>
                                        </div>

                                        <div class="col-md-5">
                                            <div class="form-group">
                                                <label asp-for="File" class="form-label">Video Seçin</label>
                                                <input asp-for="File" type="file" accept="video/*"
                                                       class="form-control mb-1"
                                                       id="defaultFormControlInput"
                                                       aria-describedby="defaultFormControlHelp" />
                                                <small class="text-muted" style="font-size:11px;">Yüklenecek video'nun maksimum boyutu <b>128 MB</b> olmalıdır!</small><br />
                                                <span asp-validation-for="File" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-5">
                                            <br />
                                            @if (Model.YoutubeVideoPath is not null)
                                            {
                                                <label class="form-label">Mevcut Youtube Videosu</label>
                                                <br />
                                                <iframe width="300" height="200"
                                                        src=@Html.Raw(Model.YoutubeVideoPath)
                                                        title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
                                            }
                                        </div>
                                        <div class="col-md-1"></div>
                                        <div class="col-md-5">
                                            <br />
                                            @if (Model.VideoId is not null)
                                            {
                                                <label class="form-label">Mevcut Ders Videosu</label>
                                                <br />
                                                <video width="300" height="200" controls>
                                                    <source src="~/videos/@Model.Video.FileName" />
                                                    Tarayıcınız video etiketini desteklemiyor.
                                                </video>
                                            }
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary">Ders Videosunu Kaydet</button>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
