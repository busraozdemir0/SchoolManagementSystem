@model List<UserListDto>

@{
    ViewData["Title"] = "Silinmiş Kullanıcılar";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Silinmiş Kullanıcılar</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Silinmiş Öğeler</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Kullanıcılar</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="card">
                    <div class="text-nowrap m-5">
                        <table class="table table-striped" id="usersTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Adı</th>
                                    <th>Soyadı</th>
                                    <th>E-Mail</th>
                                    <th>Telefon Numarası</th>
                                    <th>Kullanıcı Adı</th>
                                    <th>Cinsiyeti</th>
                                    <th>Rolü</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Adı</th>
                                    <th>Soyadı</th>
                                    <th>E-Mail</th>
                                    <th>Telefon Numarası</th>
                                    <th>Kullanıcı Adı</th>
                                    <th>Cinsiyeti</th>
                                    <th>Rolü</th>
                                    <th>İşlemler</th>
                                </tr>
                            </tfoot>
                            <tbody class="table-border-bottom-0">
                                @foreach (var user in Model)
                                {
                                    <tr name="@user.Id">
                                        <td>@user.Name</td>
                                        <td>@user.Surname</td>
                                        <td>@user.Email</td>
                                        <td>@user.PhoneNumber</td>
                                        <td>@user.UserName</td>
                                        <td>@user.Gender</td>
                                        <td>@user.Role</td>
                                        <td class="text-center">
                                            <a class="btn btn-warning btn-sm" data-id="@user.Id" asp-area="Admin" asp-controller="User" asp-action="UndoDelete" asp-route-userId="@user.Id"><i class="fa fa-undo"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/userIndex.js" type="application/ecmascript"></script>
}
