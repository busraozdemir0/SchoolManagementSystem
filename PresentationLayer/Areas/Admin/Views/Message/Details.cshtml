@model MessageListDto
@{
    ViewData["Title"] = "Mesaj Detayları";
}
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-3">
            @await Component.InvokeAsync("MessageSidebar")
        </div>
        <div class="col-lg-9 animated fadeInRight">
            <div class="mail-box-header">
                <h2>
                    Mesaj Detayları
                </h2>
                <div class="mail-tools tooltip-demo m-t-md">
                    <h3>
                        <span class="font-normal">Konu: </span>@Model.Subject
                    </h3>
                    <h5>
                        <span class="float-right font-normal">@Model.CreatedDate.ToString("dd MMM yyyy HH:mm")</span>
                        <span class="font-normal">Kimden: </span>@Model.SenderUserEmail
                    </h5>
                </div>
            </div>
            <div class="mail-box">
                <div class="mail-body">
                    <p>
                        @Html.Raw(Model.Content)
                    </p>
                </div>         
                <div class="mail-body text-right tooltip-demo">
                    <a class="btn btn-sm btn-white" href="#"><i class="fa fa-reply"></i> Cevapla</a>
                    <a data-id="@ViewBag.messageId" asp-area="Admin" asp-controller="Message" asp-action="SafeDelete" asp-route-messageId="@ViewBag.messageId" data-placement="top" data-toggle="tooltip" data-original-title="Trash" class="btn btn-sm btn-white">
                        <i class="fa fa-trash-o"></i> Sil</a>
                </div> 
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>