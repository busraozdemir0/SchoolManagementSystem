@model List<CommentListDto>

@{
    ViewData["Title"] = "Silinmiş Yorumlar";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Silinmiş Yorumlar</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Silinmiş Öğeler</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Yorumlar</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="card">
                    <div class="text-nowrap m-5">

                        <table class="table table-striped" id="commentsTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Yorum Yapan</th>
                                    <th>İçerik</th>
                                    <th>Yapılma Tarihi</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Yorum Yapan</th>
                                    <th>İçerik</th>
                                    <th>Yapılma Tarihi</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </tfoot>
                            <tbody class="table-border-bottom-0">
                                @foreach (var comment in Model)
                                {
                                    <tr name="@comment.Id">
                                        <td>@comment.User.Name @comment.User.Surname</td>
                                        <td>@Html.Raw(comment.Content)</td>
                                        <td>@comment.CreatedDate.ToShortDateString()</td>
                                        <td>@(comment.IsDeleted ? "Aktif Değil" : "Aktif")</td>
                                        <td class="text-center">
                                            <div class="row">
                                                <a class="btn btn-warning btn-sm" style="margin-right:0.5em;" data-id="@comment.Id" asp-area="Admin" asp-controller="Comment" asp-action="UndoDelete" asp-route-commentId="@comment.Id"><i class="fa fa-undo"></i></a>

                                                <form id="deleteForm" asp-area="Admin" asp-controller="Comment" asp-action="HardDelete" asp-route-commentId="@comment.Id" method="post" onsubmit="event.preventDefault(); confirmDelete(event)">
                                                    <button class="btn btn-danger btn-sm" type="submit"><i class="fa fa-minus-circle"></i></button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/commentIndex.js" type="application/ecmascript"></script>

    <script>
        function confirmDelete(event) {
            Swal.fire({
                title: 'Tamamen silmek istediğinize emin misiniz?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet',
                cancelButtonText: 'İptal'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Silme islemini gerceklestir
                    document.getElementById("deleteForm").submit();
                } else {
                    // İptal edildiginde yapilacak islemler
                    console.log("Silme işlemi iptal edildi.");
                    return false;
                }
            });
        }
    </script>
}