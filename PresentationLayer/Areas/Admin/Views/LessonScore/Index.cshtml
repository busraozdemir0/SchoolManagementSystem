@model List<LessonScoreListDto>

@{
    ViewData["Title"] = "Not Sistemi";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Not Sistemi</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-area="Admin" asp-controller="Home" asp-action="Dashboard">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">
                <strong>Not Sistemi</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="wrapper wrapper-content  animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="card">
                    <div class="text-nowrap m-5">

                        <table class="table table-striped" id="lessonScoresTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Öğrenci No</th>
                                    <th>Adı</th>
                                    <th>Soyadı</th>
                                    <th>Sınıfı</th>
                                    <th>Ders Adı</th>
                                    <th>Dersin Öğretmeni</th>
                                    <th>1. Sınav Notu</th>
                                    <th>2. Sınav Notu</th>
                                    <th>Performans Notu</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Öğrenci No</th>
                                    <th>Adı</th>
                                    <th>Soyadı</th>
                                    <th>Sınıfı</th>
                                    <th>Ders Adı</th>
                                    <th>Dersin Öğretmeni</th>
                                    <th>1. Sınav Notu</th>
                                    <th>2. Sınav Notu</th>
                                    <th>Performans Notu</th>
                                    <th>Durum</th>
                                    <th>İşlemler</th>
                                </tr>
                            </tfoot>
                            <tbody class="table-border-bottom-0">
                                @foreach (var lessonScore in Model)
                                {
                                    <tr name="@lessonScore.Id">
                                        <td>@lessonScore.StudentNo</td>
                                        <td>@lessonScore.User.Name</td>
                                        <td>@lessonScore.User.Surname</td>
                                        <td>@lessonScore.GradeName</td>
                                        <td>@lessonScore.Lesson.LessonName</td>
                                        <td>@lessonScore.LessonTeacher</td>                 
                                        <td>
                                            @if (lessonScore.Score1 == 0)
                                            {  <p>-</p>  }
                                            else
                                            {@lessonScore.Score1}
                                        </td>
                                        <td>
                                            @if (lessonScore.Score2 == 0)
                                            {<p>-</p>}
                                            else
                                            {@lessonScore.Score2}
                                        </td>
                                        <td>
                                            @if (lessonScore.PerformanceScore == 0)
                                            {<p>-</p>}
                                            else
                                            {@lessonScore.PerformanceScore}
                                        </td>
                                        <td>@(lessonScore.IsDeleted ? "Aktif Değil" : "Aktif")</td>
                                        <td class="text-center">
                                            <a class="btn btn-primary btn-sm" data-id="@lessonScore.Id" asp-area="Admin" asp-controller="LessonScore" asp-action="Update" asp-route-lessonScoreId="@lessonScore.Id"><i class="fa fa-edit"></i> Not Bilgisi Güncelle</a>
                                            <a class="btn btn-danger btn-sm" data-id="@lessonScore.Id" asp-area="Admin" asp-controller="LessonScore" asp-action="SafeDelete" asp-route-lessonScoreId="@lessonScore.Id"><i class="fa fa-trash"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/lessonScoreIndex.js" type="application/ecmascript"></script>
}