<div class="row">
    <div class="col-lg-6">
        <div class="widget navy-bg no-padding">
            <div class="p-m">
                <h1 class="m-xs">Admin Paneli</h1>

                <h3 class="font-bold no-margins">
                    Atlas Koleji
                </h3>
                <small>Projemizin bu panelinde Admin işlemleri bir Area yapısı üzerinden gerçekleşmektedir.</small>
            </div>

        </div>
    </div>
    <div class="col-lg-3">
        <div class="widget lazur-bg no-padding">
            <div class="p-m">
                <h1 class="m-xs">Son Haber</h1>

                <h3 class="font-bold no-margins">
                    @ViewBag.LastReport
                </h3>
                <small><a asp-area="Admin" asp-controller="Report" asp-action="Index"> Tüm Haberler </a></small>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="widget style1 yellow-bg">
            <div class="p-xxs">
                <h3 class="m-xs">Toplam Öğrenci Sayısı</h3>
                <h2 class="font-bold text-center ">
                    @ViewBag.TotalStudentCount
                    <br />
                </h2>
                <small>&nbsp; &nbsp; &nbsp; &nbsp;</small>
            </div>
        </div>
    </div>
</div>