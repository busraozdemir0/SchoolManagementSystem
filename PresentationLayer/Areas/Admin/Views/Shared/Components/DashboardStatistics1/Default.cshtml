            <div class="row">
                <div class="col-4">
                    <i class="fa fa-list-alt fa-5x"></i>
                </div>
                <div class="col-8 text-right">
                    <span> Toplam Ders </span>
                    <h2 class="font-bold">@ViewBag.TotalLessonCount</h2>
                </div>
            </div>
