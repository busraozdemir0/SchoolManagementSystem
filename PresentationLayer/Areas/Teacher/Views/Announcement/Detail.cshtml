@model AnnouncementListDto

@{
	ViewData["Title"] = "Duyuru "+ Model.Title;
}

<div class="col-md-12 chart-layer1 m-5" style="margin-bottom:400px; margin-top:150px;">
	<div class="user-marorm-m">
		<div class="malorm-bottom">
			<h4 id="subTitle">@Model.CreatedDate.ToShortDateString()</h4>
			<h2 id="nameSurname">@Model.CreatedBy</h2>
			<h1 id="title">@Model.Title</h1>
			<div id="centered">
				<p>@Html.Raw(Model.Content)</p>
			</div>
			<ul class="malorum-icons">
				<li>
					<a class="btn btn-primary" asp-area="Teacher" asp-controller="Announcement" asp-action="Index"><i class="fa fa-arrow-left"></i>&nbsp; Geri Dön</a>
				</li>
			</ul>
		</div>
	</div>
</div>
<div class="clearfix"> </div>