@model List<AnnouncementListDto>

@{
    ViewData["Title"] = "Silinmiş Duyurularınız";
}

<div class="inner-block wrapper wrapper-content  animated fadeInRight" style="margin-bottom: 20em;">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="text-nowrap m-5">
                    <nav aria-label="breadcrumb" style="margin-bottom:4.5em;">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item active" aria-current="page" style="font-size:25px;">Silinmiş Duyurularınız</li>
                        </ol>
                    </nav>

                    <table class="table table-hover" id="announcementsTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Başlık</th>
                                <th>İçerik</th>
                                <th>Oluşturan</th>
                                <th>Duyuru Yapılan Kullanıcı</th>
                                <th>Oluşturulma Tarihi</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Başlık</th>
                                <th>İçerik</th>
                                <th>Oluşturan</th>
                                <th>Duyuru Yapılan Kullanıcı</th>
                                <th>Oluşturulma Tarihi</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </tfoot>
                        <tbody class="table-border-bottom-0">
                            @foreach (var announcement in Model)
                            {
                                <tr name="@announcement.Id">
                                    <td>@announcement.Title</td>
                                    <td>@Regex.Replace(HttpUtility.HtmlDecode(announcement.Content), @"<[^>]*>|&nbsp;", "").Substring(0, 5)...</td>
                                    <td>@announcement.CreatedBy</td>
                                    <td>@announcement.Role.Name</td>
                                    <td>@announcement.CreatedDate.ToShortDateString()</td>
                                    <td>@(announcement.IsDeleted ? "Aktif Değil" : "Aktif")</td>
                                    <td class="text-center">
                                        <div class="row" style="display:flex; justify-content:space-between;">
                                            <a class="btn btn-warning btn-sm" data-id="@announcement.Id" style="margin-right:0.5em;" asp-area="Teacher" asp-controller="Announcement" asp-action="UndoDelete" asp-route-announcementId="@announcement.Id"><i class="fa fa-undo"></i></a>

                                            <form id="deleteForm" asp-area="Teacher" asp-controller="Announcement" asp-action="HardDelete" asp-route-announcementId="@announcement.Id" method="post" onsubmit="event.preventDefault(); confirmDelete(event)">
                                                <button class="btn btn-danger btn-sm" type="submit"><i class="fa fa-minus-circle"></i></button>
                                            </form>

                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/announcementIndex.js" type="application/ecmascript"></script>

    <script>
        function confirmDelete(event) {
            Swal.fire({
                title: 'Silmek istediğinize emin misiniz?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet',
                cancelButtonText: 'İptal'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Silme islemini gerceklestir
                    document.getElementById("deleteForm").submit();
                } else {
                    // İptal edildiginde yapilacak islemler
                    console.log("Silme işlemi iptal edildi.");
                    return false;
                }
            });
        }
    </script>
}