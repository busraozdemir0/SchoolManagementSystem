@model List<AnnouncementListDto>

@{
    ViewData["Title"] = "Yaptığınız Duyurular";
}

<div class="inner-block wrapper wrapper-content  animated fadeInRight" style="margin-bottom: 20em;">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="text-nowrap m-5">
                    <nav aria-label="breadcrumb" style="margin-bottom:4.5em;">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item active" aria-current="page" style="font-size:25px;">Öğrencilere Yaptığınız Duyurular</li>
                        </ol>
                    </nav>

                    <a class="btn btn-success mb-3" asp-area="Teacher" asp-controller="Announcement" asp-action="Add" style="margin-bottom:1.7em;">
                        Duyuru Yap <i class="fa fa-plus"></i>
                    </a>

                    <table class="table table-hover" id="announcementsTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Başlık</th>
                                <th>İçerik</th>
                                <th>Oluşturan</th>
                                <th>Duyuru Yapılan Kullanıcı</th>
                                <th>Oluşturulma Tarihi</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Başlık</th>
                                <th>İçerik</th>
                                <th>Oluşturan</th>
                                <th>Duyuru Yapılan Kullanıcı</th>
                                <th>Oluşturulma Tarihi</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </tfoot>
                        <tbody class="table-border-bottom-0">
                            @foreach (var announcement in Model)
                            {
                                <tr name="@announcement.Id">
                                    <td>@announcement.Title</td>
                                    <td>@Regex.Replace(HttpUtility.HtmlDecode(announcement.Content), @"<[^>]*>|&nbsp;", "").Substring(0, 5)...</td>
                                    <td>@announcement.CreatedBy</td>
                                    <td>@announcement.Role.Name</td>
                                    <td>@announcement.CreatedDate.ToShortDateString()</td>
                                    <td>@(announcement.IsDeleted ? "Aktif Değil" : "Aktif")</td>
                                    <td class="text-center">
                                        <a class="btn btn-primary btn-sm" data-id="@announcement.Id" asp-area="Teacher" asp-controller="Announcement" asp-action="Update" asp-route-announcementId="@announcement.Id"><i class="fa fa-edit"></i></a>
                                        <a class="btn btn-danger btn-sm" data-guid="@announcement.Id" asp-area="Teacher" asp-controller="Announcement" asp-action="Delete" asp-route-announcementId="@announcement.Id" onclick="event.preventDefault(); confirmDelete(this)"><i class="fa fa-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/announcementIndex.js" type="application/ecmascript"></script>

    <script>
        function confirmDelete(element) {
            var guid = element.getAttribute('data-guid'); // Guid degeri

            Swal.fire({
                title: 'Yaptığınız duyuruyu silmek istediğinize emin misiniz?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet',
                cancelButtonText: 'İptal'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Silme islemini gerceklestir
                    window.location.href = '/Teacher/Announcement/Delete?announcementId=' + guid; // silme islemi icin bu sayfaya yonlendirme islemi (gelen id ile birlikte)
                } else {
                    // İptal edildiginde yapilacak islemler
                    console.log("Silme işlemi iptal edildi.");
                    return false;
                }
            });
        }
    </script>
}