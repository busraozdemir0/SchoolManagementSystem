@model LessonDocumentAddDto

@{
    ViewData["Title"] = "Ders Materyali Yükle";
}

<div class="inner-block wrapper wrapper-content  animated fadeInRight" style="margin-bottom: 20em;">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="text-nowrap m-5">
                    <nav aria-label="breadcrumb" style="margin-bottom:4.5em;">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item active" aria-current="page" style="font-size:25px;">Ders Materyali Yükle</li>
                        </ol>
                    </nav>
                    <a class="btn btn-warning mb-3" asp-area="Teacher" asp-controller="Lesson" asp-action="Index" style="margin-bottom:1.7em;">
                        <i class="fa fa-arrow-left"></i> Geri Dön
                    </a>
                    <form asp-area="Teacher" asp-controller="LessonDocument" asp-action="Add" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="card-body">

                            <div class="form-group">
                                <input type="hidden" asp-for="LessonId" value="@ViewBag.LessonId" />
                            </div>

                            <div class="form-group">
                                <label class="form-label">Ders</label>
                                <input type="text"
                                       class="form-control mb-1"
                                       id="defaultFormControlInput"
                                       value="@ViewBag.LessonName"
                                       readonly
                                       aria-describedby="defaultFormControlHelp" />
                            </div>

                            <div class="form-group">
                                <label asp-for="Title" class="form-label">Ders Materyali Başlığı</label>
                                <input asp-for="Title" type="text"
                                       class="form-control mb-1"
                                       id="defaultFormControlInput"
                                       placeholder="Lütfen ders materyalinin başlığını giriniz."
                                       aria-describedby="defaultFormControlHelp" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Document" class="form-label">Dosya seçiniz</label>
                                <input asp-for="Document" type="file" accept="*"
                                       class="form-control mb-1"
                                       id="defaultFormControlInput"
                                       aria-describedby="defaultFormControlHelp" />
                                <span asp-validation-for="Document" class="text-danger"></span> 
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Ders Materyali Yükle</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
