@model List<LessonDocumentListDto>

@{
    ViewData["Title"] = "Silinmiş Ders Materyalleri";
}

<div class="inner-block wrapper wrapper-content  animated fadeInRight" style="margin-bottom: 20em;">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="text-nowrap m-5">
                    <nav aria-label="breadcrumb" style="margin-bottom:4.5em;">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item active" aria-current="page" style="font-size:25px;">Silinmiş Ders Materyalleri</li>
                        </ol>
                    </nav>
                    <table class="table table-hover" id="lessonDocumentsTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Ders</th>
                                <th>Başlık</th>
                                <th>Ders Materyali</th>
                                <th>Yüklenme Tarihi</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Ders</th>
                                <th>Başlık</th>
                                <th>Ders Materyali</th>
                                <th>Yüklenme Tarihi</th>
                                <th>İşlemler</th>
                            </tr>
                        </tfoot>
                        <tbody class="table-border-bottom-0">
                            @foreach (var document in Model)
                            {
                                <tr name="@document.Id">
                                    <td>@document.Lesson.LessonName</td>
                                    <td>@document.Title</td>
                                    <td><a href="~/documents/@document.Document.FileName">@document.Document.FileName</a></td>
                                    <td>@document.CreatedDate.ToShortDateString()</td>
                                    <td class="text-center">
                                        <a class="btn btn-warning btn-sm" data-id="@document.Id" asp-area="Teacher" asp-controller="LessonDocument" asp-action="UndoDelete" asp-route-lessonDocumentId="@document.Id"><i class="fa fa-undo"></i></a>
                                        <a class="btn btn-danger btn-sm" data-id="@document.Id" asp-area="Teacher" asp-controller="LessonDocument" asp-action="HardDelete" asp-route-lessonDocumentId="@document.Id"><i class="fa fa-minus"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/lessonDocumentIndex.js" type="application/ecmascript"></script>
}