@model List<LessonDocumentListDto>

@{
    ViewData["Title"] = "Ders Materyalleri";
}

<div class="inner-block wrapper wrapper-content  animated fadeInRight" style="margin-bottom: 20em;">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="text-nowrap m-5">
                    <nav aria-label="breadcrumb" style="margin-bottom:4.5em;">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item active" aria-current="page" style="font-size:25px;">@ViewBag.LessonName Dersine Ait Yüklenen Materyaller</li>
                        </ol>
                    </nav>
                    <a class="btn btn-warning mb-3" asp-area="Teacher" asp-controller="Lesson" asp-action="Index" style="margin-bottom:1.7em;">
                        <i class="fa fa-arrow-left"></i> Geri Dön
                    </a>
                    <table class="table table-hover" id="lessonDocumentsTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Ders</th>
                                <th>Başlık</th>
                                <th>Ders Materyali</th>
                                <th>Yüklenme Tarihi</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Ders</th>
                                <th>Başlık</th>
                                <th>Ders Materyali</th>
                                <th>Yüklenme Tarihi</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </tfoot>
                        <tbody class="table-border-bottom-0">
                            @foreach (var document in Model)
                            {
                                <tr name="@document.Id">
                                    <td>@document.Lesson.LessonName</td>
                                    <td>@document.Title</td>
                                    <td><a href="~/documents/@document.Document.FileName">@document.Document.FileName</a></td>
                                    <td>@document.CreatedDate.ToShortDateString()</td>
                                    <td>@(document.IsDeleted ? "Aktif Değil" : "Aktif")</td>
                                    <td class="text-center">
                                        <a class="btn btn-primary btn-sm" data-id="@document.Id" asp-area="Teacher" asp-controller="LessonDocument" asp-action="Update" asp-route-lessonDocumentId="@document.Id"><i class="fa fa-edit"></i></a>
                                        <a class="btn btn-danger btn-sm" data-guid="@document.Id" asp-area="Teacher" asp-controller="LessonDocument" asp-action="SafeDelete" asp-route-lessonDocumentId="@document.Id" onclick="event.preventDefault(); confirmDelete(this)"><i class="fa fa-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/lessonDocumentIndex.js" type="application/ecmascript"></script>

    <script>
        function confirmDelete(element) {
            var guid = element.getAttribute('data-guid'); // Guid degeri

            Swal.fire({
                title: 'Dokümanı silmek istediğinize emin misiniz?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet',
                cancelButtonText: 'İptal'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Silme islemini gerceklestir
                    window.location.href = '/Teacher/LessonDocument/SafeDelete?lessonDocumentId=' + guid; // silme islemi icin bu sayfaya yonlendirme islemi (gelen id ile birlikte)
                } else {
                    // İptal edildiginde yapilacak islemler
                    console.log("Silme işlemi iptal edildi.");
                    return false;
                }
            });
        }
    </script>
}