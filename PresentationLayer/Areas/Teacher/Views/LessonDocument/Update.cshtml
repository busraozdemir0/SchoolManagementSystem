@model LessonDocumentUpdateDto

@{
    ViewData["Title"] = "Ders Materyali Güncelle";
}

<div class="inner-block wrapper wrapper-content  animated fadeInRight" style="margin-bottom: 20em;">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="text-nowrap m-5">
                    <nav aria-label="breadcrumb" style="margin-bottom:4.5em;">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item active" aria-current="page" style="font-size:25px;">Ders Materyali Güncelle</li>
                        </ol>
                    </nav>
                    <a class="btn btn-warning mb-3" asp-area="Teacher" asp-controller="LessonDocument" asp-action="ListDocumentByLesson" style="margin-bottom:1.7em;">
                        <i class="fa fa-arrow-left"></i> Geri Dön
                    </a>
                    <form asp-area="Teacher" asp-controller="LessonDocument" asp-action="Update" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="card-body">

                            <div class="form-group">
                                <input type="hidden" asp-for="Id" />

                                <input type="hidden" asp-for="LessonId" value="@ViewBag.LessonId" />

                                <input type="hidden" asp-for="CreatedBy" value="@ViewBag.CreatedBy" />
                            </div>

                            <div class="form-group">
                                <label class="form-label">Ders</label>
                                <input type="text"
                                       class="form-control mb-1"
                                       id="defaultFormControlInput"
                                       value="@ViewBag.LessonName"
                                       readonly
                                       aria-describedby="defaultFormControlHelp" />
                            </div>

                            <div class="form-group">
                                <label asp-for="Title" class="form-label">Ders Materyali Başlığı</label>
                                <input asp-for="Title" type="text"
                                       class="form-control mb-1"
                                       id="defaultFormControlInput"
                                       placeholder="Lütfen ders materyalinin başlığını giriniz."
                                       aria-describedby="defaultFormControlHelp" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-4">
                                        <label asp-for="Material" class="form-label">Dosya seçiniz</label>
                                        <input asp-for="Material" type="file" accept="*"
                                               class="form-control mb-1"
                                               id="defaultFormControlInput"
                                               aria-describedby="defaultFormControlHelp" />
                                        <small class="text-muted" style="font-size:11px;">Yüklenecek dosya'nın maksimum boyutu 128 MB olmalıdır!</small><br />
                                        <span asp-validation-for="Material" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-8">
                                        @if (Model.DocumentId is not null)
                                        {
                                            <label asp-for="Document.FileName" class="form-label" style="margin-bottom:0.5em;">Mevcut Materyal</label>
                                            <br />
                                            <a href="~/documents/@Model.Document.FileName">@Model.Document.FileName</a>
                                        }
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Ders Materyalini Güncelle</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
