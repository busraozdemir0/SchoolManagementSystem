@model List<LessonScoreListDto>

@{
    ViewData["Title"] = "Silinmiş Not Bilgileri";
}

<div class="inner-block wrapper wrapper-content  animated fadeInRight" style="margin-bottom: 20em;">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="text-nowrap m-5">
                    <nav aria-label="breadcrumb" style="margin-bottom:4.5em;">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item active" aria-current="page" style="font-size:25px;">Silinmiş Not Bilgileri</li>
                        </ol>
                    </nav>
                    <table class="table table-hover" id="lessonScoresTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Öğrenci No</th>
                                <th>Adı</th>
                                <th>Soyadı</th>
                                <th>Sınıfı</th>
                                <th>Ders Adı</th>
                                <th>1. Sınav Notu</th>
                                <th>2. Sınav Notu</th>
                                <th>Performans Notu</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Öğrenci No</th>
                                <th>Adı</th>
                                <th>Soyadı</th>
                                <th>Sınıfı</th>
                                <th>Ders Adı</th>
                                <th>1. Sınav Notu</th>
                                <th>2. Sınav Notu</th>
                                <th>Performans Notu</th>
                                <th>İşlemler</th>
                            </tr>
                        </tfoot>
                        <tbody class="table-border-bottom-0">
                            @foreach (var lessonScore in Model)
                            {
                                <tr name="@lessonScore.Id">
                                    <td>@lessonScore.StudentNo</td>
                                    <td>@lessonScore.User.Name</td>
                                    <td>@lessonScore.User.Surname</td>
                                    <td>@lessonScore.GradeName</td>
                                    <td>@lessonScore.Lesson.LessonName</td>
                                    <td>
                                        @if (lessonScore.Score1 == 0)
                                        {
                                               <p>-</p>
                                        }
                                        else
                                        {
                                            @lessonScore.Score1
                                        }
                                    </td>
                                    <td>
                                        @if (lessonScore.Score2 == 0)
                                        {
                                               <p>-</p>
                                        }
                                        else
                                        {
                                            @lessonScore.Score2
                                        }
                                    </td>
                                    <td>
                                        @if (lessonScore.PerformanceScore == 0)
                                        {
                                              <p>-</p>
                                        }
                                        else
                                        {
                                            @lessonScore.PerformanceScore
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="row" style="display:flex; justify-content:space-between;">
                                            <a class="btn btn-warning btn-sm" data-id="@lessonScore.Id" asp-area="Teacher" asp-controller="LessonScore" asp-action="UndoDelete" asp-route-lessonScoreId="@lessonScore.Id"><i class="fa fa-undo"></i></a>

                                            <form id="deleteForm" asp-area="Teacher" asp-controller="LessonScore" asp-action="HardDelete" asp-route-lessonScoreId="@lessonScore.Id" method="post" onsubmit="event.preventDefault(); confirmDelete(event)">
                                                <button class="btn btn-danger btn-sm" type="submit"><i class="fa fa-minus-circle"></i></button>
                                            </form>

                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/lessonScoreIndex.js" type="application/ecmascript"></script>

    <script>
        function confirmDelete(event) {
            Swal.fire({
                title: 'Silmek istediğinize emin misiniz?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Evet',
                cancelButtonText: 'İptal'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Silme islemini gerceklestir
                    document.getElementById("deleteForm").submit();
                } else {
                    // İptal edildiginde yapilacak islemler
                    console.log("Silme işlemi iptal edildi.");
                    return false;
                }
            });
        }
    </script>
}
