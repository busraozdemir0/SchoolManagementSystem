@model List<LessonDocumentListDto>

@{
    ViewData["Title"] = "Ders Materyalleri";
}

<div class="inner-block wrapper wrapper-content  animated fadeInRight" style="margin-bottom: 20em;">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="text-nowrap m-5">
                    <div class="pro-head">
                        <h2>@ViewBag.LessonName Dersine Ait Ders Materyalleri</h2>
                    </div>
                    <a class="btn btn-success mb-3" asp-area="Student" asp-controller="Lesson" asp-action="Index" style="margin-left: 1.1em; margin-bottom:1.7em;">
                        <i class="fa fa-arrow-left"></i> Geri Dön
                    </a>
                    <br />
                    @if (Model.Count == 0) // Eger derse ait hic materyal yoksa
                    {
                        <h3 style="margin-left: 0.7em; margin-bottom:1.7em; margin-top:0.5em; color:#da2222;">
                            Bu derse ait henüz materyal yüklenmedi.
                        </h3>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th style="background-color:black; color:#fff;">Başlık</th>
                                        <th style="background-color:black; color:#fff;">Ders Materyali</th>
                                        <th style="background-color:black; color:#fff;">Yüklenme Tarihi</th>

                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var document in Model)
                                    {
                                        <tr name="@document.Id">
                                            <td scope="row">@document.Title</td>
                                            <td><a href="~/documents/@document.Document.FileName">@document.Document.FileName</a></td>
                                            <td>@document.CreatedDate.ToShortDateString()</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>