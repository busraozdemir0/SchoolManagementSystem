@model List<AnnouncementListDto>

@{
    ViewData["Title"] = "Duyurular";
}

<div class="inner-block wrapper wrapper-content  animated fadeInRight" style="margin-bottom: 20em;">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="text-nowrap m-5">
                    <nav aria-label="breadcrumb" style="margin-bottom:4.5em;">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item active" aria-current="page" style="font-size:25px;">Size Yapılan Duyurular</li>
                        </ol>
                    </nav>
                    <div class="table-responsive">
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th style="background-color:black; color:#fff;">Başlık</th>
                                    <th style="background-color:black; color:#fff;">İçerik</th>
                                    <th style="background-color:black; color:#fff;">Kimden</th>
                                    <th style="background-color:black; color:#fff;">Oluşturulma Tarihi</th>
                                    <th style="background-color:black; color:#fff;">Detay</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var announcement in Model)
                                {
                                    <tr name="@announcement.Id">
                                        <td scope="row">@announcement.Title</td>
                                        <td>@Regex.Replace(HttpUtility.HtmlDecode(announcement.Content), @"<[^>]*>|&nbsp;", "").Substring(0, 5)...</td>
                                        <td>@announcement.CreatedBy</td>
                                        <td>@announcement.CreatedDate.ToShortDateString()</td>
                                        <td class="text-center">
                                            <a class="btn btn-primary btn-sm" data-id="@announcement.Id" asp-area="Student" asp-controller="Announcement" asp-action="Detail" asp-route-announcementId="@announcement.Id"><i class="fa fa-bell-o"></i> Detayları Gör</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>