@model CommentAddDto

@{
    ViewData["Title"] = "Yorum Yap";
}

<div class="inner-block wrapper wrapper-content  animated fadeInRight" style="margin-bottom: 20em;">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="text-nowrap m-5">
                    <nav aria-label="breadcrumb" style="margin-bottom:2.5em;">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item active" aria-current="page" style="font-size:25px;">Okul Hakkındaki Yorumunuz</li>
                        </ol>
                    </nav>
                    <a class="btn btn-warning mb-3" asp-area="Student" asp-controller="Home" asp-action="Index" style="margin-bottom:1.7em;">
                        <i class="fa fa-arrow-left"></i> Ana Sayfa
                    </a>
                    <form asp-area="Student" asp-controller="Comment" asp-action="Add" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="card-body">

                            <div class="form-group">
                                <label asp-for="Content" class="form-label">Okulumuz hakkında duygu ve düşüncelerinizi bizimle paylaşmaktan çekinmeyin. :)</label>
                                <textarea asp-for="Content" id="editor" type="text"
                                          class="form-control mb-1"
                                          id="defaultFormControlInput"
                                          placeholder="Yorumunuz..."
                                          aria-describedby="defaultFormControlHelp" style="min-height:300px"></textarea>
                                <span asp-validation-for="Content" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Yorum Yap</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
